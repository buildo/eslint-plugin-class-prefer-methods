{
  "name": "eslint-plugin-class-prefer-methods",
  "version": "1.0.1",
  "description": "Eslint plugin to ensure usage of class methods instead of arrow-function properties whenever possible",
  "main": "lib",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "rm -rf lib && tsc",
    "watch": "npm run build -- --watch",
    "prepublish": "npm run build",
    "release-version": "smooth-release",
    "test": "npm run build && jest"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:buildo/eslint-plugin-class-prefer-methods"
  },
  "keywords": [
    "eslint",
    "react",
    "class",
    "callback",
    "arrow function",
    "bind",
    "jsx"
  ],
  "author": "Francesco Cioria <francesco@buildo.io>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/buildo/eslint-plugin-class-prefer-methods/issues"
  },
  "homepage": "https://github.com/buildo/eslint-plugin-class-prefer-methods/issues",
  "devDependencies": {
    "@types/node": "^8.0.15",
    "babel-eslint": "^8.2.5",
    "eslint": "^4.3.0",
    "jest": "^20.0.4",
    "smooth-release": "^8.0.4",
    "typescript": "^2.4.2"
  }
}
